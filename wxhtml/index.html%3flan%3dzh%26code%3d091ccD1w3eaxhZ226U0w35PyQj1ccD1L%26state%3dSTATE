      margin: 0 auto;
    }</style><script>let setRootFontSize = function() {
      var basic = document.documentElement.clientWidth;
      var basicH = document.documentElement.clientHeight; //屏幕高度
      let maxW = 1080;
      let flag = false;
      //先判断是横屏竖屏
      if(basicH > basic)
      { //竖屏
        //不做处理，宽度自适应
        maxW = '100%';
      }
      else
      {  //横屏
        if(basicH >= 667)
        { //如果高度大于设计图高度
          basic = 375 * basicH / 667;
          maxW = basic; //限制最大宽度
        }
        else
        {
          basic = 375; //限制最小屏幕宽度375
          maxW = basic;
        }
        flag = true;
        maxW = maxW + 'px';
      }

      var box = document.getElementById('box');
      if(basic >= 640)
      {
        box.style.fontSize = (640 / 7.5).toFixed(2) + 'px';
      }
      else
      {
        box.style.fontSize = (basic / 7.5).toFixed(2) + 'px';
      }
      let ele = document.createElement("style");
      ele.innerHTML = "div{max-width:  " + maxW + ";}"
      document.getElementsByTagName("head").item(0).appendChild(ele);
    }

    setRootFontSize()
    window.addEventListener('resize', function() {
      setRootFontSize();
    }, false)

